<script>
    let current = 1;
    const total = 15;
    const btn = document.getElementById('nextBtn');
    const dotTracker = document.getElementById('dotTracker');

    function nextPage() {
        // If we are already on the last page, clicking the button reloads the page
        if (current === total) {
            location.reload(); 
            return;
        }

        // 1. Hide current page
        document.getElementById(`p${current}`).classList.remove('active');
        
        // 2. Increment page number
        current++;
        
        // 3. Show next page
        document.getElementById(`p${current}`).classList.add('active');
        
        // 4. Update the tracker text
        dotTracker.innerText = `Page ${current} / ${total}`;
        
        // 5. Special check: Are we on the last page?
        if (current === total) {
            btn.innerText = "Replay from Start â†º"; // Change Text
            btn.classList.add('replay'); // Change Style (Purple)
            triggerConfetti(); // Blast Confetti
        }
    }

    // Confetti Animation Function
    function triggerConfetti() {
        const duration = 3000;
        const animationEnd = Date.now() + duration;
        const defaults = { startVelocity: 30, spread: 360, ticks: 60, zIndex: 0 };

        const random = (min, max) => Math.random() * (max - min) + min;

        const interval = setInterval(function() {
            const timeLeft = animationEnd - Date.now();

            if (timeLeft <= 0) {
                return clearInterval(interval);
            }

            const particleCount = 50 * (timeLeft / duration);
            
            // Blast from left
            confetti(Object.assign({}, defaults, { particleCount, origin: { x: random(0.1, 0.3), y: Math.random() - 0.2 } }));
            // Blast from right
            confetti(Object.assign({}, defaults, { particleCount, origin: { x: random(0.7, 0.9), y: Math.random() - 0.2 } }));
        }, 250);
    }
</script>

